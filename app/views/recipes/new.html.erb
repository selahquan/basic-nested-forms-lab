<%= form_for @recipe do |f| %>
    <%= f.label "Recipe title:" %>
    <%= f.text_field :title %><br/>

    <%= f.fields_for :ingredients do |nested_form| %>
        <%= nested_form.label :name %>
        <%= nested_form.text_field :name %><br/>

        <%= nested_form.label :quantity %>
        <%= nested_form.text_field :quantity %><br/>
    <% end %>

    <%= f.submit %>
<% end %>
